@using IdentityService.Quickstart.UI
    @model RegisterViewModel

<div class="login-page">

    <partial name="_ValidationSummary" />

    <div class="row">

        
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <h2>Rejestracja</h2>
                    </div>

                    <div class="card-body">
                        <form asp-route="Register">
                            <input type="hidden" asp-for="ReturnUrl" />

                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input class="form-control" placeholder="Email" asp-for="Email" autofocus>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input type="password" class="form-control" placeholder="Hasło" asp-for="Password" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword"></label>
                                <input type="password" class="form-control" placeholder="Powtórz hasło" asp-for="ConfirmPassword" autocomplete="off">
                            </div>
                            <button class="btn btn-primary" name="button" value="login">Zarejestruj</button>
                            <button class="btn btn-secondary" name="button" asp-controller="Account" asp-action="Login">Anuluj</button>
                        </form>
                    </div>
                </div>
            </div>
    </div>
</div>