@using IdentityService.Quickstart.Account
@model ResetPasswordViewModel

<div class="login-page">

    <partial name="_ValidationSummary" />

    <div class="row">
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <h2>Logowanie</h2>
                    </div>

                    <div class="card-body">
                        <form asp-route="ResetPassword">
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input type="password" class="form-control" placeholder="Hasło" asp-for="Password" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword"></label>
                                <input type="password" class="form-control" placeholder="Powtórz hasło" asp-for="ConfirmPassword" autocomplete="off">
                            </div>

                            <button class="btn btn-primary" name="button" value="login">Resetuj</button>
                        </form>
                    </div>
                </div>
            </div>
    </div>
</div>